<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.lineageos.device.DeviceExtras"
    android:sharedUserId="android.uid.system"
    android:versionCode="6"
    android:versionName="6.0">

    <uses-permission android:name="android.permission.INJECT_EVENTS" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <permission
        android:name="org.lineageos.device.DeviceExtras.TRIGGER_SCREEN_OFF_GESTURE"
        android:protectionLevel="signatureOrSystem" />

    <protected-broadcast android:name="com.android.systemui.doze.pulse" />
    <protected-broadcast android:name="org.lineageos.device.DeviceExtras.UPDATE_SETTINGS" />
    <protected-broadcast android:name="org.lineageos.device.DeviceExtras.UPDATE_SLIDER_POSITION" />
    <protected-broadcast android:name="org.lineageos.device.DeviceExtras.UPDATE_SLIDER_SETTINGS" />

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="29" />

    <application
        android:icon="@drawable/ic_settings_device"
        android:label="@string/device_extras_title"
        android:theme="@style/Theme.SubSettingsBase"
        android:defaultToDeviceProtectedStorage="true"
        android:directBootAware="true">

        <receiver
            android:name=".Startup"
            android:defaultToDeviceProtectedStorage="true"
            android:directBootAware="true"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity 
            android:name=".DeviceExtras" />
        <activity 
            android:name=".KeyHandler" />

        <!-- DeviceExtras -->
        <activity
            android:name=".DeviceExtrasActivity"
            android:label="@string/device_extras_title">
            <intent-filter>
                <action android:name="com.android.settings.action.EXTRA_SETTINGS" />
            </intent-filter>

            <meta-data
                android:name="com.android.settings.icon"
                android:resource="@drawable/ic_settings_device" />
            <meta-data
                android:name="com.android.settings.category"
                android:value="com.android.settings.category.ia.homepage" />
            <meta-data
                android:name="com.android.settings.summary"
                android:resource="@string/device_summary" />
        </activity>

        <!-- DeviceExtras tile -->
        <service
            android:name=".DeviceExtrasTileService"
            android:icon="@drawable/ic_settings_device"
            android:label="@string/device_extras_title"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- Panel Settings Activity -->
        <activity
            android:name=".PanelSettingsActivity"
            android:exported="true"
            android:label="@string/panel_modes_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Touch Gesture Settings Activity -->
        <activity
            android:name=".TouchscreenGestureSettings"
            android:label="@string/touchscreen_gesture_settings_title"
            android:theme="@style/Theme.SubSettingsBase">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ScreenOffLaunchGestureActivity"
            android:permission="org.lineageos.device.DeviceExtras.TRIGGER_SCREEN_OFF_GESTURE"
            android:excludeFromRecents="true"
            android:exported="true"
            android:label="@string/touchscreen_gesture_settings_title"
            android:theme="@style/AppTheme.Transparent">
        </activity>

        <!-- Panel Mode's Tile -->
        <service
            android:name=".PanelModeTileService"
            android:icon="@drawable/ic_panel_modes"
            android:label="@string/panel_modes_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- DC-Dimming tile -->
        <service
            android:name=".DCModeTileService"
            android:icon="@drawable/ic_dc_mode"
            android:label="@string/dc_mode_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- HBM Service -->
        <service 
            android:name=".HBMModeService"
            android:exported="false" />

        <!-- Auto HBM service -->
        <service
            android:name=".AutoHBMService"
            android:exported="false" />

        <!-- HBM tile -->
        <service
            android:name=".HBMModeTileService"
            android:icon="@drawable/ic_hbm_mode"
            android:label="@string/hbm_mode_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- Doze service -->
        <service
            android:name=".doze.DozeService"
            android:permission="OneplusDozeService" />

        <!-- Doze Activity -->
        <activity
            android:name=".doze.DozeSettingsActivity"
            android:exported="true"
            android:label="@string/ambient_display_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Doze tile -->
        <service
            android:name=".doze.DozeTileService"
            android:icon="@drawable/ic_eye"
            android:label="@string/ambient_display_gestures_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- FPS info service -->
        <service
            android:name=".FPSInfoService"
            android:exported="false" />

        <!-- FPS tile -->
        <service
            android:name=".FPSTileService"
            android:icon="@drawable/ic_fps_overlay"
            android:label="@string/fps_info_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- Game Mode  Tile -->
        <service
            android:name=".GameModeTileService"
            android:icon="@drawable/ic_game_mode"
            android:label="@string/game_mode_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- Touchboost tile -->
        <service
            android:name=".TouchboostTileService"
            android:icon="@drawable/ic_touchboost"
            android:label="@string/touchboost_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- TP Edge Limit Mode Tile -->
        <service
            android:name=".TPEdgeLimitModeTileService"
            android:icon="@drawable/ic_tp_edge_limit_mode"
            android:label="@string/tp_edge_limit_mode_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- USB 2.0 force FastCharge tile -->
        <service
            android:name=".USB2FastChargeTileService"
            android:icon="@drawable/ic_usb2_fc"
            android:label="@string/usb2_fc_title"
            android:enabled="false"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action
                    android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <!-- Search indexing -->
        <provider
            android:name=".ConfigPanelSearchIndexablesProvider"
            android:authorities="org.lineageos.device"
            android:exported="true"
            android:grantUriPermissions="true"
            android:multiprocess="false"
            android:permission="android.permission.READ_SEARCH_INDEXABLES">
            <intent-filter>
                <action android:name="android.content.action.SEARCH_INDEXABLES_PROVIDER" />
            </intent-filter>
        </provider>
    </application>
</manifest>
